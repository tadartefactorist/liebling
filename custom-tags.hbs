{{!< default}}
{{#get "tags" limit="all" include="count.posts" order="count.posts desc"}}
<div class="section-page-tags wrap">
    <div class="page-tags-wrap flex">
        {{#foreach tags to="3"}}
        {{#if @first}}
        <div class="page-tags-title">
            <h4>{{t "Our top tags"}}</h4>
        </div>
        {{/if}}
        <div class="page-tag-wrap top{{#if feature_image}} is-image{{else}} no-image{{/if}}">
            <a href="{{url}}" class="item-link-overlay"></a>
            {{#if feature_image}}
            <div class="page-tag-image" style="background-image: url({{feature_image}})"></div>
            {{/if}}
            <h2><a href="{{url}}">{{name}}</a></h2>
            {{#if description}}
            <p>{{description}}</p>
            {{/if}}
        </div>
        {{/foreach}}
        {{#foreach tags from="4"}}
        {{#if @first}}
        <div class="page-tags-title">
            <h4>{{t "You might also like"}}</h4>
        </div>
        {{/if}}
        <div class="page-tag-wrap other{{#if feature_image}} is-image{{else}} no-image{{/if}}">
            <a href="{{url}}" class="item-link-overlay"></a>
            {{#if feature_image}}
            <div class="page-tag-image" style="background-image: url({{feature_image}})"></div>
            {{/if}}
            <h2><a href="{{url}}">{{name}}</a></h2>
        </div>
        {{/foreach}}
    </div>
</div>
{{/get}}